<launch>
    <arg name="visualization" default="true"/>
    <arg name="location" default="braemabuel"/>

    <group if="$(var visualization)">
        <node exec="rviz2" name="rviz2" pkg="rviz2"  args="-d $(find-pkg-share snowsampler_rviz)/launch/config.rviz" output="screen" />
    </group>
    <node pkg="grid_map_geo" exec="test_tif_loader" name="test_tif_loader" namespace="grid_map_geo" output="screen">
        <param name="tif_path" value="$(find-pkg-share adaptive_snowsampler)/resources/$(var location).tif"/>
        <param name="tif_color_path" value="$(find-pkg-share adaptive_snowsampler)/resources/$(var location)_color.tif"/>
    </node>
</launch>

