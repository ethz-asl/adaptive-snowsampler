[Unit]
Description=Launch SnowSampler Drone node as a service
After=network.target systemd-udevd.service

[Service]
EnvironmentFile=/home/user/ros2_ws/src/systemd/environment.conf
ExecStart=/bin/bash /home/user/ros2_ws/src/systemd/run_controller.sh
ProtectSystem=full

[Install]
WantedBy=multi-user.target