<launch>
    <arg name="rviz" default="true"/>
    <arg name="location" default="braemabuel"/>
    <node pkg="tf2_ros" exec="static_transform_publisher" name="world_map" args="--frame-id world --child-frame-id map"/>

    <node pkg="adaptive_snowsampler" exec="adaptive_snowsampler" name="snowsampler_node" output="screen">
        <param name="tif_path" value="$(find-pkg-share adaptive_snowsampler)/resources/braemabuel.tif"/>
        <param name="tif_color_path" value="$(find-pkg-share adaptive_snowsampler)/resources/braemabuel_color.tif"/>
    </node>

    <group if="$(var rviz)">
        <node exec="rviz2" name="rviz2" pkg="rviz2"  args="-d $(find-pkg-share adaptive_snowsampler)/rviz/config.rviz" />
    </group>
</launch>
